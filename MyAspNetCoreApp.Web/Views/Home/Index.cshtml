}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>Günün tarihi: @DateTime.Now.ToShortDateString()</div>
@{
    var datetime = DateTime.Now.ToShortDateString();
    var message = "merhaba";

    //razor içinde text yazmak için @: kullanılır

    @: bugünün tarihi: @datetime

    <div>mesaj: @message</div>

    //razor içinde text yazmak için kullanılır.
    <text>Bugünü tarihi</text>
}

@if (1==1)
{
    <h3>Doğru</h3>
}
else if(DateTime.IsLeapYear(DateTime.Now.Year)){
    <h3>artık yıl</h3>
}
else{
    <p>Yanlış</p>
}

@for(var i=0; i<10; i++)
{
    <p>@i</p>
}

@foreach(var item in Enumerable.Range(1,10).ToList())
{
    @item
}

